{
	"name": "@sprucelabs/spruce-skill-utils",
	"publishConfig": {
		"access": "public"
	},
	"version": "18.2.1",
	"files": [
		"build/**/*",
		"!build/__tests__",
		"tsconfig.json"
	],
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"exports": {
		".": {
			"node": "./build/index.js",
			"require": "./build/index.js",
			"import": "./build/esm/index.js",
			"default": "./build/esm/index.js"
		}
	},
	"module": "./build/esm/index.js",
	"license": "MIT",
	"description": "Loosely coupled classes and functions to make skill development faster! üèé",
	"keywords": [
		"node",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-skill-utils",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-skill-utils/issues"
	},
	"scripts": {
		"build": "yarn build.tsc && yarn build.dist",
		"build.copy-files": "cp -r ./src/.spruce build/ && cp -r ./src/__tests__/testDirsAndFiles build/__tests__/",
		"build.dist": "tsc --project tsconfig.dist.json",
		"build.tsc": "tsc && yarn build.copy-files",
		"clean": "rm -rf build/ ; true",
		"clean.all": "rm -rf node_modules ; rm yarn.lock ; yarn clean ; true",
		"fix.lint": "eslint --fix '**/*.ts'",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"rebuild": "yarn clean.all && yarn && yarn build",
		"release": "semantic-release",
		"test": "jest",
		"upgrade.packages": "yarn-upgrade-all && rm yarn.lock ; yarn ; yarn fix.lint | true",
		"upgrade.packages.all": "yarn install && yarn upgrade.packages",
		"upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build && yarn test",
		"watch.build": "concurrently 'yarn run build.tsc' \"chokidar 'src/**/*' -c 'clear ; yarn build.tsc'\"",
		"watch.lint": "chokidar 'src/**/*' -c 'yarn lint.tsc'",
		"watch.tests": "jest --watch"
	},
	"dependencies": {
		"@sprucelabs/error": "latest",
		"@sprucelabs/schema": "latest",
		"chalk": "^4.1.0",
		"fs-extra": "^9.1.0",
		"inflection": "^1.12.0",
		"lodash": "^4.17.21",
		"random": "^2.2.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@sprucelabs/babel-plugin-schema": "latest",
		"@sprucelabs/jest-json-reporter": "latest",
		"@sprucelabs/semantic-release": "latest",
		"@sprucelabs/test": "latest",
		"@sprucelabs/test-utils": "latest",
		"@types/fs-extra": "^9.0.7",
		"@types/inflection": "^1.5.28",
		"@types/lodash": "^4.14.168",
		"@types/node": "^14.14.31",
		"@types/random": "^2.1.1",
		"@types/uuid": "^8.3.0",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^6.0.0",
		"conventional-changelog-sprucelabs": "latest",
		"eslint": "^7.20.0",
		"eslint-config-spruce": "latest",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"prettier": "^2.2.1",
		"typescript": "^4.2.2",
		"yarn-upgrade-all": "^0.5.4"
	},
	"jest": {
		"maxWorkers": 4,
		"testTimeout": 300000,
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/src/",
			"<rootDir>/node_modules/",
			"<rootDir>/build/__tests__/testDirsAndFiles/",
			"<rootDir>/build/esm/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.js?(x)"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
		}
	},
	"yarn-upgrade-all": {
		"ignore": [
			"@sprucelabs/error",
			"@sprucelabs/schema",
			"@sprucelabs/babel-plugin-schema",
			"@sprucelabs/jest-json-reporter",
			"@sprucelabs/semantic-release",
			"@sprucelabs/test",
			"@sprucelabs/test-utils",
			"conventional-changelog-sprucelabs",
			"eslint-config-spruce"
		]
	}
}
