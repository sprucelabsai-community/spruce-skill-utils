{
	"name": "@sprucelabs/spruce-skill-utils",
	"publishConfig": {
		"access": "public"
	},
	"version": "20.1.3",
	"files": [
		"build/**/*",
		"!build/__tests__",
		"tsconfig.json"
	],
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"module": "./build/esm/index.js",
	"sideEffects": false,
	"license": "MIT",
	"description": "Loosely coupled classes and functions to make skill development faster! üèé",
	"keywords": [
		"node",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-skill-utils",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-skill-utils/issues"
	},
	"scripts": {
		"build.ci": "yarn build.tsc",
		"build.copy-files": "mkdir -p build/__tests__ && cp -r ./src/.spruce build/ && cp -r ./src/__tests__/testDirsAndFiles build/__tests__/",
		"build.dev": "yarn build.tsc",
		"build.dist": "yarn build.tsc && tsc --project tsconfig.dist.json && yarn build.esm-postbuild",
		"build.esm-postbuild": "esm-postbuild --target build/esm --patterns '**/*.js'",
		"build.tsc": "yarn build.copy-files && tsc",
		"clean": "yarn clean.build",
		"clean.all": "yarn clean.dependencies && yarn clean.build",
		"clean.build": "rm -rf build/",
		"clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
		"fix.lint": "eslint --fix '**/*.ts'",
		"lint": "eslint --cache '**/*.ts' && tsc -p . --noEmit",
		"rebuild": "yarn clean.all && yarn && yarn build.dev",
		"rebuild.dependencies": "yarn clean.dependencies && yarn",
		"release": "semantic-release",
		"test": "jest",
		"upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint ; true",
		"upgrade.packages.all": "yarn install && yarn upgrade.packages",
		"upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build.dev && yarn test",
		"watch.build.dev": "yarn build.dev -w",
		"watch.lint": "chokidar 'src/**/*' -c 'yarn lint.tsc'"
	},
	"dependencies": {
		"@sprucelabs/error": "latest",
		"@sprucelabs/schema": "latest",
		"chalk": "^4.1.1",
		"dotenv": "^10.0.0",
		"fs-extra": "^10.0.0",
		"globby": "^11.0.4",
		"inflection": "^1.13.1",
		"lodash": "^4.17.21",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@sprucelabs/esm-postbuild": "latest",
		"@sprucelabs/jest-json-reporter": "latest",
		"@sprucelabs/jest-sheets-reporter": "^1.2.49",
		"@sprucelabs/resolve-path-aliases": "latest",
		"@sprucelabs/semantic-release": "latest",
		"@sprucelabs/test": "latest",
		"@sprucelabs/test-utils": "latest",
		"@types/fs-extra": "^9.0.11",
		"@types/inflection": "^1.5.28",
		"@types/lodash": "^4.14.170",
		"@types/node": "^15.12.4",
		"@types/uuid": "^8.3.0",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^6.2.0",
		"conventional-changelog-sprucelabs": "latest",
		"eslint": "^7.29.0",
		"eslint-config-spruce": "latest",
		"jest": "^27.0.4",
		"jest-circus": "^27.0.4",
		"prettier": "^2.3.1",
		"typescript": "^4.3.4",
		"yarn-upgrade-all": "^0.5.4"
	},
	"jest": {
		"maxWorkers": 4,
		"testTimeout": 300000,
		"reporters": [
			"default",
			[
				"@sprucelabs/jest-sheets-reporter",
				{
					"sheetId": "1DoWM7mYgGDa-PJXptLomrZmbIBZiuxS1YiAsRXU2Gm0",
					"worksheetId": 843037832,
					"testMap": {
						"canUpdateTrackedHash": "I171"
					}
				}
			]
		],
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/tmp/",
			"<rootDir>/src/",
			"<rootDir>/node_modules/",
			"<rootDir>/build/__tests__/testDirsAndFiles/",
			"<rootDir>/build/esm/"
		],
		"testMatch": [
			"**/__tests__/**/*.test.js?(x)"
		],
		"moduleNameMapper": {
			"^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
		}
	},
	"yarn-upgrade-all": {
		"ignore": [
			"@sprucelabs/error",
			"@sprucelabs/esm-postbuild",
			"@sprucelabs/jest-json-reporter",
			"@sprucelabs/resolve-path-aliases",
			"@sprucelabs/schema",
			"@sprucelabs/semantic-release",
			"@sprucelabs/test",
			"@sprucelabs/test-utils",
			"conventional-changelog-sprucelabs",
			"eslint-config-spruce"
		]
	}
}
